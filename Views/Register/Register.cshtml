
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Ajax.BeginForm("KullanıcıEkle", new AjaxOptions()
{
    UpdateTargetId = "Başarılımı",
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace
}))
{
    <div class="container">



        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

                <form>
                    <div class="panel panel-default">
                        <div class="panel-heading text-center">
                            <h2>Register</h2>
                            <small>Please enter e-mail and password.</small>
                        </div>
                        <div class="panel-body">

                            <div class="form-group">
                                <center>
                                    <img src="http://placehold.it/125x125" class="img-circle img-responsive" />
                                </center>
                            </div>

                            <div class="form-group">
                                @Html.TextBox("Name", "", new { @class = "form-control", placeholder = "Adı" })
                            </div>

                            <div class="form-group">
                                @Html.TextBox("Email", "", new { @class = "form-control", placeholder = "E-Mail", type = "email" })
                            </div>

                            <div class="form-group">
                                @Html.TextBox("Password", "", new { @class = "form-control", type = "password", placeholder = "Şifre" })
                            </div>

                        </div>
                        <div class="panel-footer text-right">
                            <a href="#" class="btn btn-info">
                                <span class="glyphicon glyphicon-log-in"></span> Login
                            </a>
                            <button type="submit" class="btn btn-success">
                                <span class="glyphicon glyphicon-floppy-saved"></span> Register
                            </button>



                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>


}
<div id="Başarılımı"></div>



